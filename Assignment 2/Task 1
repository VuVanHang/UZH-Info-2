#include <stdio.h>

void sequence(int n) {
    if (n==1) {
        printf("%d ", n);
    }
    else if (n%2 == 0) {
        printf("%d ", n);
        sequence(n/2);
    }
    else {
        printf("%d ", n);
        sequence(3*n + 1);
    }
}

int main() {
    
    int n = 0;
    
    printf("Please enter a number: ");
    scanf("%d", &n);
    sequence(n);
    return 0;
}
