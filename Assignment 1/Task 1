#include <stdio.h>

int main (){
    char s[1000];
    printf("Please enter a string: ");
    fgets(s, 1000 , stdin);
    int length;
    length = strLength(s);
    printf("String Length: %d\n", length);
    
    return 0;
}

int strLength(char s[]) {
    
    int i;
    for (i = 0; s[i] != '\0'; i++) {}
    i -= 1;
    
    return i;
}
