#include <stdio.h>

int main (){
    char s[1000];
    printf("Please enter a string: ");
    fgets(s, 1000 , stdin);
    int i;
    
    for (i = 0; s[i] != '\0'; i++) {}
    i -= 1;
    printf("String Length: %d\n", i);
    
}
